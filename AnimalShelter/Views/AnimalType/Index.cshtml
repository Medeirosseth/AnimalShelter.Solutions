@{
  Layout = "_Layout";
}

@using AnimalShelter.Models;

<h1>Animal Types</h1>

@if (@Model.Count == 0)
{
  <h3>No animal types have been added yet!</h3>
}

@foreach (AnimalType animalType in Model)
{
  <li>@Html.ActionLink($"{animalType.Type}", "Index", new {id = animalType.Id})</li>
}
<p>@Html.ActionLink("Add new type", "Create")</p>